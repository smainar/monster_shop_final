<%= form_for @user do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, required: true %>

  <%= f.label :email %>
  <%= f.email_field :email, required: true %>

  <%= f.fields_for :addresses do |fa| %>
    <%= fa.label :street, "Street Address" %>
    <%= fa.text_field :street, required: true %>

    <%= fa.label :city %>
    <%= fa.text_field :city, required: true %>

    <%= fa.label :state %>
    <%= fa.text_field :state, required: true %>

    <%= fa.label :zip %>
    <%= fa.text_field :zip, required: true %>

    <%= fa.label :nickname, "Address Type" %>
    <%= fa.text_field :nickname, required: true %>
  <% end %>

  <%= f.label :password %>
  <%= f.password_field :password, required: true %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation, required: true %>

  <%= f.submit 'Register' %>
<% end %>
