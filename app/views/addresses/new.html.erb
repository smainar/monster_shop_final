<%= form_for [@user, @address] do |f| %>
  <%= f.label :nickname, "Address Type" %>
  <%= f.text_field :nickname, required: true, class: "new-input" %>

  <%= f.label :street, "Street Address" %>
  <%= f.text_field :street, required: true, class: "new-input" %>

  <%= f.label :city %>
  <%= f.text_field :city, required: true, class: "new-input" %>

  <%= f.label :state %>
  <%= f.text_field :state, required: true, class: "new-input" %>

  <%= f.label :zip %>
  <%= f.text_field :zip, required: true, class: "new-input" %>

  <%= f.submit "Create Address" %>
<% end %>
